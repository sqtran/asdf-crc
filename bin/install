#!/usr/bin/env bash
set -e

#
# https://mirror.openshift.com/pub/openshift-v4/clients/crc/1.12.0/crc-linux-amd64.tar.xz
#

format_num() {
    local num=$1
    local gigabyte=1073741824
    local megabyte=1048576
    local kilobyte=1024

    if [[ "${num}" -ge ${gigabyte} ]]; then
        pretty='GB'
        unit=${gigabyte}
    elif [[ "${num}" -ge ${megabyte} ]]; then
        pretty='MB'
        unit=${megabyte}
    elif [[ "${num}" -ge ${kilobyte} ]]; then
        pretty='KB'
        unit=${kilobyte}
    else
        pretty='B'
        scaled_num=${num}
    fi

    echo "$(dc <<< "2 k ${num} ${unit} / p") $pretty"
}

# Function to compare versions in a semver compatible way
# given args A and B, return 0 if A=B, -1 if A<B and 1 if A>B
function semver_compare() {
  if [ "$1" = "$2" ]; then
    # A = B
    echo 0
  else
    ordered=$(printf '%s\n' "$@" | sort -V | head -n 1)

    if [ "$ordered" = "$1" ]; then
      # A < B
      echo -1
    else
      # A > B
      echo 1
    fi
  fi
}

install_crc() {
    local install_type=$1
    local install_version=$2
    local install_path=$3

    case $(uname -s) in
    Darwin) os="macos" ;;
    *) os="linux" ;;
    esac

    case $(uname -m) in
    x86_64) arch="amd64" ;;
    *) arch="other" ;;
    esac

    if [ "$arch" = "other" ]; then
        echo "Unsupported architecture $(uname -m). Only x64 binaries are available."
        exit
    fi

    if [ ! -d "${install_path}/bin" ]; then
        mkdir -p "${install_path}/bin"
    fi

    # CRC is only avail as an OSX pkg install after 1.27.0
    if [[ "$os" == "macos" && $(semver_compare $install_version 1.26.0) == 1 ]]; then
        download="https://mirror.openshift.com/pub/openshift-v4/clients/crc/${install_version}/crc-${os}-amd64.pkg"
        file_size=$(curl -sI $download | grep "Content-Length:" | sed 's/Content-Length: //g' | tr -d '[:space:]')
        echo "This is a large file to download: $(format_num ${file_size})"
        curl -L# -N -o crc-download.pkg "${download}"
        installer -pkg crc-download.pkg -target ${install_path}
        rm crc-download.pkg
    else
        download="https://mirror.openshift.com/pub/openshift-v4/clients/crc/${install_version}/crc-${os}-amd64.tar.xz"
        file_size=$(curl -sI $download | grep "Content-Length:" | sed 's/Content-Length: //g' | tr -d '[:space:]')
        echo "This is a large file to download: $(format_num ${file_size})"
        curl -fL# -N "${download}" | tar -x -J -C "${install_path}/bin" --strip-components=1
    fi
}

install_crc $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
